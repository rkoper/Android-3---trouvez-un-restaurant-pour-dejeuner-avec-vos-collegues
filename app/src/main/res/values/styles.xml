<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

     <style name="ToolBarStyle" parent="AppTheme">
         <item name="android:textColorPrimary">@android:color/white</item>
         <item name="colorControlNormal">@android:color/white</item>
     </style>


    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
     //   <item name="android:windowBackground">@drawable/one_screen</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/ColorYellow</item>
    </style>

    <style name="NoBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">false</item>
    </style>

     <style name="TextStyleActive">
         <item name="android:textSize">17sp</item>
     </style>

     <style name="TextStyleInactive">
         <item name="android:textSize">15sp</item>
     </style>

     <style name="TextAppearance">
         <item name="colorControlHighlight">@android:color/darker_gray</item>
         <item name="android:textColor">@color/colorWhite</item>
         <item name="android:textAppearance">@font/opensans</item>
     </style>
     <style name="TextAppearanceBlack">
         <item name="colorControlHighlight">@android:color/darker_gray</item>
         <item name="android:textColor">@color/colorBlack</item>
         <item name="android:textAppearance">@font/opensans</item>
     </style>
     <style name="MyCustomTheme" parent="@android:style/Theme.Panel">
         <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
     </style>

     <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
         <item name="android:windowEnterAnimation">@anim/slider_left</item>
         <item name="android:windowExitAnimation">@anim/slider_right</item>
     </style>

     <style name="RatingBAr" parent="@style/Widget.AppCompat.RatingBar.Indicator">
         <item name="colorControlNormal">@color/ColorRed</item>
         <item name="colorControlActivated">@color/ColorYellow</item>
     </style>

     <style name="RatingBarSmall" parent="android:Widget.DeviceDefault.Light.RatingBar.Indicator">
         <item name="android:progressDrawable">@drawable/rating_bar</item>
         <item name="android:minHeight">36dp</item>
         <item name="android:maxHeight">36dp</item>
     </style>

     <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
         <item name="android:textColorPrimaryDisableOnly">#00838f</item>
         <item name="colorAccent">#e91e63</item>
         <item name="android:textSize">20sp</item>
         <item name="android:orientation">horizontal</item>
         <item name="android:textColor">#F44444</item>
         <item name="android:background">@drawable/dialog_square_white</item>
         <item name="android:thumb">@drawable/ic_round_small_red</item>
         <item name="android:textStyle">bold</item>
     </style>

     <style name="TxtViewPrincipal" parent="@style/TextAppearanceBlack">
         <item name="android:textSize">17sp</item>
         <item name="fontFamily">@font/montserrat</item>
         <item name="android:textColor">@color/colorBlack</item>
         <item name="android:ellipsize">end</item>
         <item name="android:gravity">center_vertical</item>
         <item name="android:maxLines">1</item>
         <item name="android:textStyle">bold</item>
         <item name="android:maxLength">30</item>
     </style>

    <style name="TxtViewSub" parent="@style/TextAppearanceBlack">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TxtViewWhite" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

 </resources>
