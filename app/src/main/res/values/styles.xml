 <resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

     <style name="ToolBarStyle" parent="AppTheme">
         <item name="android:textColorPrimary">@android:color/white</item>
         <item name="colorControlNormal">@android:color/white</item>
     </style>


    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
     //   <item name="android:windowBackground">@drawable/one_screen</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorStar</item>
    </style>

    <style name="NoBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">false</item>
    </style>

     <style name="TextStyleActive">
         <item name="android:textSize">17sp</item>
     </style>

     <style name="TextStyleInactive">
         <item name="android:textSize">15sp</item>
     </style>

     <style name="TextAppearance">
         <item name="colorControlHighlight">@android:color/darker_gray</item>
         <item name="android:textColor">@color/colorWhite</item>
         <item name="android:textAppearance">@font/opensans</item>
     </style>
     <style name="TextAppearanceBlack">
         <item name="colorControlHighlight">@android:color/darker_gray</item>
         <item name="android:textColor">@color/colorBlack</item>
         <item name="android:textAppearance">@font/opensans</item>
     </style>
     <style name="MyCustomTheme" parent="@android:style/Theme.Panel">
         <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
     </style>

     <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
         <item name="android:windowEnterAnimation">@anim/slider_left</item>
         <item name="android:windowExitAnimation">@anim/slider_right</item>
     </style>

     <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
         <item name="android:textColorPrimaryDisableOnly">#00838f</item>
         <item name="colorAccent">#e91e63</item>
     </style>

     <style name="abirStyle" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
         <item name="android:textColor">@color/colorPrimary</item>
         <item name="android:background">@null</item>
         <item name="android:textColorPrimary">@color/colorPrimary</item>
     </style>

     <style name="RatingBAr" parent="@style/Widget.AppCompat.RatingBar.Indicator">
         <item name="colorControlNormal">@color/fui_transparent</item>
         <item name="colorControlActivated">@color/ColorYellow</item>
     </style>
 </resources>
