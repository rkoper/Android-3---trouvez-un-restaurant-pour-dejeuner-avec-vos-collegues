<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="90sp"
    android:padding="5dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/sub_photo_profilgo"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginStart="14sp"
        android:layout_marginTop="8dp"
        android:background="@color/fui_transparent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_name_profilgo"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76sp"
        android:layout_marginTop="16dp"
        android:maxLength="50"
        android:maxLines="1"
        android:text="@string/profil_name"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearanceBlack"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/sub_photo_profilgo"
        app:layout_constraintTop_toTopOf="@id/sub_photo_profilgo" />

</androidx.constraintlayout.widget.ConstraintLayout>