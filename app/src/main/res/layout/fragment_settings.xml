<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-282dp">

        <Switch
            android:id="@+id/switchNotif"
            android:layout_width="309dp"
            android:layout_height="37dp"
            android:layout_marginTop="85sp"
            android:gravity="center"
            android:text="Switch" />

        <TimePicker
            android:id="@+id/ClockNotif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Red"
            android:headerBackground="@color/Red"
            android:numbersSelectorColor="@color/Red"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/buttonTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Picker"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/drawer_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite"
        app:itemIconSize="30sp"
        app:itemIconTint="@drawable/tab_color"
        app:itemTextAppearanceActive="@style/TextStyleActive"
        app:itemTextAppearanceInactive="@style/TextStyleInactive"
        app:itemTextColor="@drawable/tab_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav_bottom_for_drawer"
        tools:ignore="MissingConstraints"

        />

</androidx.constraintlayout.widget.ConstraintLayout>