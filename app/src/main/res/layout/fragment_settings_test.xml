<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:background="@color/fui_transparent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:maxHeight="500dp"
    android:maxWidth="900dp">

    <Switch
        android:id="@+id/switch_lang_fr"
        style="@style/MySwitch"
        android:layout_width="280dp"
        android:layout_height="75dp"
        android:background="@drawable/dialog_square_white"
        android:orientation="horizontal"
        android:paddingStart="60sp"
        android:paddingEnd="60sp"
        android:text="French"
        android:textColor="#F44444"
        android:textSize="20sp"
        android:textStyle="bold"
        android:thumb="@drawable/ic_round_small_red" />

    <Switch
        android:id="@+id/switch_lang_en"
        style="@style/MySwitch"
        android:layout_width="280dp"
        android:layout_height="75sp"
        android:layout_marginTop="75sp"
        android:background="@drawable/dialog_square_white"
        android:orientation="horizontal"
        android:paddingStart="60sp"
        android:paddingEnd="60sp"
        android:text="English"
        android:textColor="#F44444"
        android:textSize="20sp"
        android:textStyle="bold"
        android:thumb="@drawable/ic_round_small_red" />

    <Switch
        android:id="@+id/switch_notif"
        style="@style/MySwitch"
        android:layout_width="280sp"
        android:layout_height="75sp"
        android:layout_marginTop="225sp"
        android:background="@drawable/dialog_square_white"
        android:orientation="horizontal"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:text="Notification"
        android:textColor="#F44444"
        android:textSize="20sp"
        android:textStyle="bold"
        android:thumb="@drawable/ic_round_small_red" />

    <TimePicker
        android:id="@+id/widget_time_picker"
        android:layout_width="280sp"
        android:layout_height="130sp"
        android:layout_marginTop="300sp"
        android:background="@drawable/dialog_square_white"
        android:orientation="horizontal"
        android:timePickerMode="spinner"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/dialog_square_white"
        android:orientation="vertical"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_baseline_check_box_24"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/title_notif"
        android:layout_width="112dp"
        android:layout_height="75dp"
        android:layout_marginTop="150sp"
        android:background="@drawable/dialog_square"
        android:orientation="vertical">

        <TextView
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center|top"
            android:text="Notification"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/check_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40sp"
            android:layout_marginTop="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_close"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="160sp"
        android:background="@drawable/ic_cancel_black_24dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/title_lang"
        android:layout_width="112dp"
        android:layout_height="75dp"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/dialog_square"
        android:orientation="vertical">

        <TextView
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center|top"
            android:text="Languages"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/check_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40sp"
            android:layout_marginTop="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lfrench"
        android:layout_width="280dp"
        android:layout_height="75dp"
        android:background="@drawable/dialog_square"
        android:orientation="vertical"
        tools:visibility="invisible" />

    <LinearLayout
        android:id="@+id/lenglish"
        android:layout_width="280dp"
        android:layout_height="75dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/dialog_square"
        android:orientation="vertical"
        tools:visibility="invisible" />

    <LinearLayout
        android:id="@+id/lnotif"
        android:layout_width="280dp"
        android:layout_height="75dp"
        android:layout_marginTop="225dp"
        android:background="@drawable/dialog_square"
        android:orientation="vertical"
        tools:visibility="invisible" />

    <LinearLayout
        android:id="@+id/ltime_p"
        android:layout_width="280dp"
        android:layout_height="130sp"
        android:layout_marginTop="300sp"
        android:background="@drawable/dialog_square"
        android:orientation="vertical"
        tools:visibility="invisible" />

</RelativeLayout>