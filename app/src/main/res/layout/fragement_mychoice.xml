<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fui_transparent"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/layout_choice_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/dialog_rounded_bg"
        android:minWidth="350dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/frag_choice_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/fui_transparent"
            app:srcCompat="@drawable/ic_cancel_white"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_choice_name"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginTop="360dp"
        android:background="@drawable/dialog_rounded_bg"
        android:minWidth="350dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/frag_choice_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="bottom|center"
            android:text="MychoiceName"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/frag_choice_adress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="35sp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="MychoiceAdress"
            android:textAppearance="@style/TextAppearance"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_choice_title"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/dialog_rounded_bg"
        android:minWidth="350dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/frag_choice_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="My Choice"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_choice_photo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/dialog_rounded_bg"
        android:minWidth="350dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/frag_choice_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/fui_transparent"
            android:foregroundGravity="center"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="24dp" />

    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/layout_choice_no_choice"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/dialog_rounded_bg"
        android:minWidth="350dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/frag_choice_no_choice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fui_transparent"
            android:gravity="center"
            android:text="No restaurant choosen"
            android:textAppearance="@style/TextAppearance"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_mychoice_cancel"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="155dp"
        android:layout_weight="2"
        android:background="@drawable/dialog_rounded_bg"
        android:minWidth="350dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toEndOf="@+id/layout_choice_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/image_b_cancel_choice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fui_transparent"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_cancel_black_24dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>