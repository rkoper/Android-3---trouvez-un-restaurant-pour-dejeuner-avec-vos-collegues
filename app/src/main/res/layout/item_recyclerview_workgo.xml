<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorWhite"
    android:padding="5dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/sub_photo_profilgo"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="24dp"
        android:background="@color/colorWhite"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_name_profilgo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/profil_name"
        android:textAppearance="@style/TxtViewSub"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@id/sub_photo_profilgo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sub_photo_profilgo"
        app:layout_constraintTop_toTopOf="@id/sub_photo_profilgo" />

    <Button
        android:id="@+id/buttonClick"
        android:layout_width="391dp"
        android:layout_height="68dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="4dp"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>